<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <div class="row">
      <% category.recipes.each do |recipe| %>
          <div class="col-lg-4 col-md-6">
            <%= link_to({controller: 'recipe', action: 'show', key: recipe.key}, class: 'panel panel-default recipe-thumbnail' ) do %>
                <%= image_tag(recipe.image, class: 'img-responsive') %>
                <div class="panel-body">
                  <h4>
                    <%=tr(recipe.name)%>
                  </h4>
                  <p>
                    <%=tr(recipe.description)%>
                  </p>
                </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>